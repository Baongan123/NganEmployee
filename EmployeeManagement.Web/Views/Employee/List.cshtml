@using EmployeeManage.Domain.Responses
@{
    ViewData["Title"] = ViewBag.Title;
    var department = ViewBag.Department != null ? ViewBag.Department as Department : new Department();
    List<Department> departments = ViewBag.Departments as List<Department>;
}

    <h6><a href="/">Home</a> &gt; Employees of @department.DepartmentName</h6>
<div class="row">
    <input hidden id="DepartmentId" value="@department.DepartmentId" />
    <div class="col-12 mb-3">
        <a href="javascript:void(0);"onclick="employee.openAddEditemployee()" class="btn btn-info">Create</a>
    </div>
</div>
<table id="tbEmployee" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>Employee Name</th>
            <th>Date of birth</th>
            <th>Gender</th>
            <th>Avatar</th>
            <th>Created date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>
<!-- Modal -->
<div id="addEditemployee" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <form id="frmAddEditemployee">
                 Modal content
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Employee</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <input hidden id="EmployeeId" name="EmployeeId">
                    <div class="modal-body">
                        <div class="row form-group">
                            <div class="col-3">
                                <label>Employee Name</label>
                            </div>
                            <div class="col-9">
                                <input type="text" id="EmployeeName" name="Employee Name" class="form-control" data-rule-required="true">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-3">
                                <label>DoB</label>
                            </div>
                            <div class="col-9">
                                <input type="date" id="DoB" name="Date of Birth" class="form-control" data-rule-required="true">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-3">
                                <label>Gender</label>
                            </div>
                            <div class="col-9">
                                <select id="Gender" style="width:100%">
                                     
                                </select>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-3">
                                <label>DepartmentId</label>
                            </div>
                            <div class="col-9">
                                <select id="Department" style="width:100%"  >
                                </select>
                               
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-3">
                                <label>AvartarPath</label>
                            </div>
                            <div class="col-9">
                                <input type="text" id="AvartarPath" name="AvartarPath" class="form-control" data-rule-required="true">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        <a href="javascript:;" class="btn btn-danger" onclick="employee.save()">Save</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
@section Scripts{
    <script src="~/js/employee.js" asp-append-version="true"></script>
}
